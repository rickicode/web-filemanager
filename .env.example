# File Manager Configuration
# Copy this file to .env and modify values as needed

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Authentication
# Set to false to disable authentication and allow direct access
AUTH=true

# Admin Credentials (only used when AUTH=true)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-$(date +%s)-$(openssl rand -hex 16)
REDIS_URL=redis://localhost:6379

# Application Settings
NODE_ENV=production
MAX_FILE_SIZE=0
UPLOAD_TIMEOUT=300000